    <div class="show-inner">
        <div class="container pb-4">
            <div class="main-body">

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="show-breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('project_index') }}">Projects</a></li>
                        <li class="breadcrumb-item active"
                            aria-current="page">{{ project.internalTitle ? project.internalTitle|capitalize : 'empty' }}</li>
                    </ol>
                </nav>
                <!-- /Breadcrumb -->

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="{{ asset('build/images/folder.png') }}" alt="project img"
                                         class=""
                                         width="150">
                                    <div class="mt-3">
                                        <div class="d-flex">
                                            <a class="btn btn-success me-2" href="{{ path('project_index') }}">back</a>
                                            <a class="btn btn-primary me-2"
                                               href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                                            {{ include('project/_delete_form.html.twig') }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <p class="user-about text-secondary">{{ project.description ? project.description|capitalize : 'empty' }}</p>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Internal Title</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary mb-0">
                                        {{ project.internalTitle }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">External Title</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ project.externalTitle }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Period Start</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ project.periodStart ? project.periodStart|date('Y-m-d') : '' }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Period End</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ project.periodEnd ? project.periodEnd|date('Y-m-d') : '' }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-4">Members</h6>

                                <ul class="list-group">
                                {% for user in project.user %}
                                    <li class="list-group-item">
                                        <a class="" href="{{ path('user_show', {'id': user.id}) }}">
                                            {{ user.email }}
                                        </a>
                                    </li>
                                {% endfor %}
                                </ul>
                            </div>
                        </div>


                    </div>


                </div>
            </div>
        </div>
    </div>
