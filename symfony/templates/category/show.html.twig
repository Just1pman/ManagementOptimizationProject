{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block content %}
    <div class="container">
        <h1>Category</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-success me-2" href="{{ path('category_index') }}">back</a>

            <a class="btn btn-primary me-2" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
            <p>
                {{ include('category/_delete_form.html.twig') }}
            </p>
        </div>
    </div>
{% endblock %}
