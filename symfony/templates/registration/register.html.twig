{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="login-logo d-flex justify-content-center">
        <a class="main-header__logo" href="{{ path('homepage') }}"><img width="70" height="auto"
                                                                        src="{{ asset('build/images/cube.svg') }}"
                                                                        alt="logo"></a>
    </div>
    <h1 class="h3 mb-4 font-weight-normal text-center">Register</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Password'
    }) }}
    {{ form_row(registrationForm.agreeTerms) }}

    <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
