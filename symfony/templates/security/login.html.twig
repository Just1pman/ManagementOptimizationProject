{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block header %}
{% endblock header %}

{% block content %}
    <div class="container h-100 d-flex align-items-center justify-content-center">
        <div class="row form-wrapper">
            <form class="col-12 mb-4 " method="post">
                {% if error %}
                    <div class="alert alert-danger row">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-5 text-muted text-center">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="login-logo d-flex justify-content-center">
                    <a class="main-header__logo" href="{{ path('homepage') }}"><img width="70" height="auto"
                                                                                    src="{{ asset('build/images/cube.svg') }}"
                                                                                    alt="logo"></a>
                </div>
                <h1 class="h3 mb-4 font-weight-normal text-center">Please sign in</h1>
                <div class="login-form">
                    <label class="fw-bolder mb-2" for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                           class="form-control mb-3"
                           required
                           autofocus
                           placeholder="Email address">
                    <label class="fw-bolder mb-2" for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mb-3" required
                           placeholder="Password">

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >


                    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
                    {# See https://symfony.com/doc/current/security/remember_me.html #}

                    <div class="checkbox mb-2">
                        <label>
                            <input class="me-1" type="checkbox" name="_remember_me">
                            <span>Remember me</span>
                        </label>
                    </div>

                    <button class="login-button btn w-100" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
            <div class="col-12 text-left ">
                <div class="register-link border border-1 text-center">
						<span>
							Donâ€™t have an account?
						</span>

                    <a href={{ path('app_register') }}>
                        Create an account.
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}
